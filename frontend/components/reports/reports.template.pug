.reports-wrapper
    .row.center-xs
        .col-xs-12.col-md-10.reports-holder
            .row.reports-header
                h3.col-xs-10 Reports
                .col-xs-1.col-xs-offset-1.fa.fa-close.button.font-button
            .row.generate-holder.center-xs
                h3.col-xs-6 Quckly report generating
                .col-xs-12
                   .row
                        span(ng-link = "['Reports Add']").button.btn.col-xs-4.col-xs-offset-4 Generate
            .row.reports-recent
                .col-xs-12
                    .row.start-xs
                        span.chapter-title.col-xs-10 Recent
                            .fa.fa-clock-o
                    .row.center-xs
                        table.col-xs-12.review-table(ng-show="reports.recentReports")
                            tr.row.t-head
                                td.col-xs-3 Title
                                td.col-xs-5 Description
                                td.col-xs-2 Created
                            tr.row.t-body(ng-repeat = "r in reports.recentReports track by $index")
                                td.col-xs-3 {{r.title}}
                                td.col-xs-5 {{r.description}}
                                td.col-xs-2 {{r.creationDate | date : "dd/MM/y"}}
                                td.col-xs-2
                                    .row.around-xs
                                        span.col-xs-4.fa.fa-eye.button.f-btn(ng-link = "['Reports Edit', {id: reports.recentReports[$index]._id}]")
                                        span.col-xs-4.fa.fa-trash.button.f-btn
                        h4.col-xs-12.start-xs(ng-show="!reports.recentReports") You don't have reports yet
                    .row(ng-show="reports.recentReports")
                        .col-xs-1.col-xs-offset-11.button.btn More
            hr
            .row.reports-samples
                .col-xs-12
                    .row.start-xs
                        span.chapter-title.col-xs-10 Samples
                            .fa.fa-bookmark-o
                    .row
                        .col-xs-12.masonry
                            .item(ng-repeat = "r in reports.savedReports track by $index")
                                .row.start-xs.middle-xs
                                    .col-xs-8.item-title {{r.title}}
                                    .col-xs-4
                                        .row.around-xs
                                            span.col-xs-5.fa.fa-eye.button.f-btn
                                            span.col-xs-5.fa.fa-trash.button.f-btn
                                hr
                                .row.start-xs.item-row(ng-show = "r.participants")
                                    .col-xs-4
                                        span.row.item-def Users:
                                    .col-xs-8
                                        span.row.item-value {{r.participants.join(',')}}
                                .row.start-xs.item-row(ng-show = "r.types")
                                    .col-xs-4
                                        span.row.item-def Type:
                                    .col-xs-8
                                        span.row.item-value {{r.types.join(', ')}}
                                .row.start-xs.item-row(ng-show = "r.dateRange")
                                    .col-xs-4
                                        span.row.item-def Dates:
                                    .col-xs-8
                                        span.row.item-value {{r.dateRange[0] | date : 'dd/MM/y'}} - {{r.dateRange[1] | date : 'dd/MM/y'}}

                    .row
                        .col-xs-1.col-xs-offset-11.button.btn More
