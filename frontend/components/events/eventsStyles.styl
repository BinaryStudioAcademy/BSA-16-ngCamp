@import "../../../public/libs/css/generalComponentsStyle.styl"
.events-wrapper
    width 100%
    padding 1%
    .row
        padding 0
        margin 0

    .events-holder
        padding 1%
        border 1px solid border-grey
        border-radius 10px
        background-color background-white 
        box-shadow 0px 5px 20px 2px  #808080
        .events-header 
            border-bottom 1px solid grey
            padding 1%
            span
                font-family "Montserrat"
                text-align center
                width 100%
                display inline-block
                font-weight bold
                font-size 30px    
        .button
            button()
            font-family "Montserrat"
            font-size 24px
            height 34px
        .chose-event
            input[type=date]
                border-radius 5px
        .events-items
            overflow hidden
            margin 0px auto
            
            .event
                margin 0px
                .fa
                    padding-top 18px
               
          