.content
    flex 1
    display flex
    flex-flow column nowrap
    justify-content space-around
    align-content space-around
    width 100%

.resizable-row
    min-height 50px
    flex 1
    display flex
    flex-flow row nowrap
    &.resizable
        flex 0 0 300px

section
    box-sizing border-box
    border-radius 10px
    margin 7px
    background: transparent
    background white
    flex 1
    min-width 30px
    &.resizable
        flex 0 0 400px
#two
    background: transparent
    min-width 360px
    min-height 80vh
    max-hight 80vh
    .checkins-info-container
        width 100%
        height 100%
        right-panel-component
            margin 2% 2%
            display block
            max-height 80vh
            overflow-y auto
            &::-webkit-scrollbar
                width 10px
            &::-webkit-scrollbar-track
                background: none;
            &::-webkit-scrollbar-thumb
                background: #d3d3d3;
                border-radius: 7px;
.checkins-main-wrap
    width: 80%
    margin-left: 10%
    box-sizing: border-box
    word-break: break-all
#one
    background: transparent
    min-width 364px
    min-height 80vh
    max-hight 80vh
    ng-outlet
        width 100%
        height 100%
    