.trash-container h1{
	text-align: center;
	font-size: 50px;
}
.trash-menu{
	padding: inherit;
	display: block;
	width: 830px;
	margin: 15px auto;
}
.trash-menu li{
	display: inline-block;
	padding: 5px 10px 5px 10px;
	border-left: 1px solid black;
	height: 15px;
	line-height: 15px;
	font-size: 20px;
}
.trash-menu li:nth-child(2){
	border: none;
}
.trash-menu li:first-child{
	border: none;
}
.trash-menu li a{
	color: #2f6fad;
}
.trash-menu li a:hover{
	text-decoration: none;
	color: #ad303f;
}
.trash-menu-container{
	width: 90%;
	padding-left: 5%;
	padding-right 5%;
}
.trash-items{
	overflow: hidden;
	margin: 50px auto;
	width: 60%;
}
.trash-input{
	width: 70px;
	position: relative;
    top: -4px;
	height: 20px;
	border-radius 7px;
}
.trash-input:focus{
	outline: none;
}
.trash-line{
	width: 35%
	margin: 0 auto 0 auto;
}
.trash-data div{
	display: inline-block;
	float: left;
	font-size: 20px;
}
.data-title{
	width: 30%;
	padding-top: 15px;
	padding-bottom 15px;
	padding-right 25px;
}
.data-desc{
	width: 50%;
	padding-top: 15px;
	padding-bottom 15px;
	padding-right 25px;
}
.data-button{
	text-align: right;
	font-size: 35px !important;
	position: relative;
	top: 5px;
}


