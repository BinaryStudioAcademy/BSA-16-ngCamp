.checkins-setup-wrapper
    .checkins-setup
        .header-setup
            .close-btn
                a(ng-link='["Checkins List"]')
                    i.fa.fa-close
            h3 What question do you want to ask?
            input.question(type='text', ng-model="CheckCr.question" placeholder='Type your question...')
        .main-setup
            h3 Who do you want to ask?
            button(ng-click='CheckCr.toggleAll()') Ask all
            ul.user-list
                li.list(ng-repeat="part in CheckCr.participants track by $index")
                    label.checkbox(ng-click="CheckCr.toggleChekin()")
                        span  {{part.lastName +' '+  part.firstName}}
                        input(type='checkbox', ng-checked="CheckCr.parties.indexOf(part._id) > -1",ng-click="CheckCr.toggleChekin(part._id)" )

        .footer-setup
            h3 How frequently should we ask it?
            .schedule
                div
                    select#schedule-first(multiple size="5", ng-model='CheckCr.selectedFrequency', ng-options='item for item in CheckCr.frequency',
                 ng-selected="CheckCr.frequency[0]")

                div
                    select#schedule-second(ng-model='CheckCr.selectedTime', ng-options='item for item in CheckCr.time',
                ng-selected='CheckCr.time[0]')

                div
                    button(ng-click="CheckCr.save()") Save

