@import "../../../public/libs/css/generalComponentsStyle.styl"
.fileupload_wrapper
	width 100%
	.addFile
		button()
		margin 25px auto
		font-size 1.2em
		padding 0 0.5em
		display flex
		flex-wrap nowrap
		justify-content space-between
		outline none
		i
			display inline
			font-size 1.2em
			margin-right 0.5em
		span
			display: -moz-inline-stack;
			display inline
			font-family "Montserrat"
			font-size 1em
			margin-left 0.5em
	.file-Item
		padding 5px 7px
		.file-description
			border-bottom 1px solid #adadad
			i
				margin-left 0.5em
				font-size 1.3em
				color #ff5252
				cursor pointer