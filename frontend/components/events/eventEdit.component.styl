@import "../../../public/libs/css/generalComponentsStyle.styl"
.eventsEdit-wrapper
  width 100%
  .main
    padding 1%
    border 1px solid border-grey
    border-radius 10px
    background-color background-white
    box-shadow 0px 5px 20px 2px  #808080
    font-family "Open Sans"
    font-weight 400
    font-size 23px
    text-align justify
    .head
      font-family "Montserrat"
      display flex
      flex-direction row
      justify-content space-between
    .date
      display flex
      flex-direction row
      justify-content space-between
      margin-top 10px
      margin-bottom 10px
      
      .dataPicker
        .form-control
          width 60%
        .picker
          display flex
          flex-direction row
        a
          height 34px
    textarea
      min-width 100%
      height 150px
    .participants
        width 100%
        display block-flex
        flex-wrap wrap
        justify-content center
        align-items center
        select
          max-width 80%
          min-width 80%
          border-radius 7px
          border none
          outline none
          padding 8px
          border 1px solid gray
          color #333
          &:hover
            box-shadow: 0 0 7px #3498db
        .participantCell
          display flex
          justify-content center
          align-items center
          margin-top 10px
          .participant_wrapper
            background-color #1d8dbf
            display inline-flex
            padding 10px
            border-radius 8px
            .participantTitle
              color white
              margin-right 10px
            .deleteButton
              i
                font-size 25px
                transition all 0.3s ease-out;
                cursor pointer
                &:hover
                  color white

    .period
      display flex
      flex-direction row
      justify-content space-between
      button
        font-family "Montserrat"
        button()
      .deleteButton
        background-color #FF5252
    i
      color black

    a
      i
        &:hover
          color blue

