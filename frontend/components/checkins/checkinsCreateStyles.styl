@import "../../../public/libs/css/generalComponentsStyle.styl"
.checkins-setup-wrapper

    .checkins-setup
        display flex
        flex-flow row wrap
        justify-content center
        max-width 650px
        height 700px
        text-align center
        margin 0 auto
        background-color #f5f5f5
        border 1px solid #adadad
        border-radius 10px
        & > *
            flex 1 100%
        i
            color #212121

    .header-setup, .main-setup
        //border-bottom 1px solid #adadad

    li
        list-style none

    .header-setup
        height 22%
        h3
            margin 0

    .close-btn
        display flex
        justify-content flex-end
        margin 10px

    .button
        box-shadow 0px 0px 10px 0px grey
        background-color main-blue
        color white
        border-radius 5px
        height 40px
        width 50px
        padding 5px
        margin 5px
        transition 0.2s
        cursor pointer
        border none
        &:hover
            box-shadow 0px 0px 0px 1px white, 0px 0px 0px 4px main-blue
        &:active
            box-shadow 0px 0px 0px 0.5px white, 0px 0px 0px 2px main-blue, 0px 0px 5px 0px white inset

    input
        &.question
            text-align center
            border 1px solid #adadad
            border-radius 10px
            font-size 25px
            width 70%
            outline none
            margin 15px

    .main-setup
        height 60%
        overflow auto
    .use-button
        //- border-top-right-radius 20px
        //- border-bottom-right-radius 20px
        //- border 1px solid #ADADAD
        background-color #F5F5F5
        width 15%
        display flex
        flex-direction column
        justify-content center
        align-items stretch
        margin auto
        //- padding-left 2%
        //- padding-right 2%
        div
            -moz-user-select -moz-none
            -o-user-select none
            -khtml-user-select none
            -webkit-user-select none
            user-select none
            display flex
            margin-top 15%
            margin-bottom 0px
            justify-content center
            align-items center
            border-radius 5px
            background-color #1D8DBF
            color WHITE
            padding 1% 3% 1% 3%
            font-size 24px
            width 100px
            height 45px
            transition 0.2s
            cursor pointer
            &:active
                box-shadow 0 0 0 0.5px WHITE, 0 0 0 2px main-blue, 0 0 5px 0 WHITE inset
            &:hover
                box-shadow 0 0 0 1px white, 0 0 0 4px #1D8DBF

    label
        &.checkbox
            display flex
            justify-content space-between
            font-size 20px
            margin-left 30px
            cursor pointer
            padding 1%

    .checkbox
        input
            width 20px
            height 20px
            margin-left -30px

    .list
        margin-right 30px

    .footer-setup
        height 18%
        .save-button
            margin 0px
            height 40px

    .schedule
        display inline-flex
        //justify-content space-between
        //align-items center
        select
            padding-top 2px
            border-radius 3px
            border 1px solid #adadad
            font-size 17px
            outline none
            margin 10px

    .fa-floppy-o
        &:hover
            color #00c000