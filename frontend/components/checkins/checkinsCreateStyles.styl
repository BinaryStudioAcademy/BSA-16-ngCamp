@import "../../../public/libs/css/generalComponentsStyle.styl"
.checkins-setup-wrapper

    .checkins-setup
        display flex
        flex-flow row wrap
        justify-content center
        max-width 650px
        height 700px
        text-align center
        margin 0 auto
        background-color #dadfe1
        border 1px solid #adadad
        border-radius 10px
        & > *
            flex 1 100%
        i
            color #212121

    .header-setup, .main-setup
        //border-bottom 1px solid #adadad

    li
        list-style none

    .header-setup
        height 22%
        h3
            margin 0

    .close-btn
        display flex
        justify-content flex-end
        margin 10px
        i
            font-size 1.8em
            //margin-right 10px
            cursor pointer
            border-radius 4px
            color #424242
            // background-color #ECF0F1
            padding 6px
            transition color 0.2s ease-out
            &:hover
                color #1d8dbf

    input
        &.question
            text-align center
            border 1px solid #adadad
            border-radius 10px
            font-size 25px
            width 70%
            outline none
            margin 15px

    .main-setup
        height 60%
        overflow auto
        button
            button()
            margin auto

    label
        &.checkbox
            display flex
            justify-content space-between
            font-size 20px
            margin-left 30px
            cursor pointer
            padding 1%

    .checkbox
        input
            width 20px
            height 20px
            margin-left -30px

    .list
        margin-right 30px

    .footer-setup
        height 18%
        .save-button
            margin 0px
            height 40px

    .schedule
        display inline-flex
        //justify-content space-between
        //align-items center
        button
            button()
        select
            padding-top 2px
            border-radius 3px
            border 1px solid #adadad
            font-size 17px
            outline none
            margin 10px

