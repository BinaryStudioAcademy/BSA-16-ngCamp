.tasks-container
    div.row
        div.col-xs-offset-4.col-xs-4
            div.box.tasks-box-center
                h1 Tasks
        div.col-xs-4
            div.box.tasks-pos-relative
                button.tasks-add-taskBut() Set up new task
    hr.tasks-line  
    .tasks-menu-container
            ul.tasks-menu
                li filter by:
                li
                    a(href="/#/tasks") time
                li
                    a(href="/#/tasks") name
                li
                    a(href="/#/tasks") subtasks left
                li
                    a(href="/#/tasks") my tasks
                li
                    a(href="/#/tasks") time left               

                li keyword =
                input.tasks-input(type="text")
    .tasks-main-container

        div.row.tasks-row-margin-top
            div.col-xs-1 4/7 |
            div.col-xs-4 Set up external auth Server
            div.col-xs-4.tasks-align-right expires in: 36 hours
            div.col-xs-1.tasks-align-right  
                i.fa.fa-arrow-down.fa-2

        div.row.tasks-row-margin-top
            div.col-xs-1 2/4 |
            div.col-xs-4 Set up infrastructure for "checkin"
            div.col-xs-4.tasks-align-right expires in: 72 hours
            div.col-xs-1.tasks-align-right  
                i.fa.fa-arrow-down.fa-2

        div.row.tasks-row-margin-top
            div.col-xs-1 1/6 |
            div.col-xs-4 Set up infrastructure for "task"
            div.col-xs-4.tasks-align-right expires in: 24 hours
            div.col-xs-1.tasks-align-right 
                 i.fa.fa-arrow-down.fa-2

        div.row.tasks-row-margin-top
            div.col-xs-1 3/8 |
            div.col-xs-4 Create glossary
            div.col-xs-4.tasks-align-right expires in: 12 hours
            div.col-xs-1.tasks-align-right  
                i.fa.fa-arrow-down.fa-2

