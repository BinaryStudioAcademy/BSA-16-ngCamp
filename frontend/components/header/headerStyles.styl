.header-wrapper
    position  fixed
    top 0
    left 0
    width 100%
    background-color #403F3F
    *
        box-sizing border-box
    #navigation
        height 50px
        .fa
            color white
        input
            color #fbfbfb
            border-radius 10px
            height 30px
        display flex
        align-items center
        justify-content flex-end
        padding-right  2%
        ul
            padding-right 1%
            li
                display inline-flex
                justify-content center
                align-items center
                list-style none
                line-height 50px
                text-align center
                &:hover
                    background-color border-grey
                a
                    display inline-block
                    text-decoration none
                    color white
                    text-align center
                        input
                            color #403F3F
                    i
                        padding 2%
                        text-align center