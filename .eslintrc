{
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "rules" : {
        "no-unused-vars" : 2,
        "no-undef" : 2,
        "semi": 2,
        "block-scoped-var": 2,
        "no-var": 2
    },
    "parserOptions": {
        "sourceType": "module"
    }
}