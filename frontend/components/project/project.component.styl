@import "../../../public/libs/css/generalComponentsStyle.styl"
.projectwrapper
  width 100%
  h1
    text-align center
  .changeProj
    display flex
    justify-content center
    margin-bottom 50px
    height 35px
    button
      display flex
      flex-wrap no-wrap
      font-family "Montserrat"
      font-size 20px
      flex-direction column
      button()
      p
        align-self center
    select
      height 140%
      width 50%
      border-radius 5px
      outline none
      font-family "Montserrat"
      font-size 18px
      font-weight 400
      option:first-child
        display none
        opacity 0
  padding 1%
  h1
    align-self center
    font-family "Montserrat"
    text-align left
    width 100%
    display inline-block
    font-weight bold
    font-size 30px
  .main
    padding 1%
    border 1px solid border-grey
    border-radius 10px
    background-color background-white 
    box-shadow 0px 5px 20px 2px  #808080
    display flex
    flex-direction column
    justify-content center
    font-family "Open Sans"
    font-weight 400
    font-size 23px
    text-align justify
    form[name="projectEdit"]
      display flex
      flex-direction column
      float left
      clear left
      width 100%
      margin 30px 0 1.5em 0
      padding 0
      justify-content center
      label
        font-family "Montserrat"
        font-size 25px
        font-weight 400
        float left
        width 7em
        margin-right 0.5em
        display flex
        justify-content center
      .wrap
        align-items center
        float left
        clear left
        width 100%
        padding-bottom 1em
        display flex
        flex-direction column
        flex-wrap wrap
      i
        align-self center
        margin-right 3px
      input
        min-width 60%
        max-width 75%
      textarea
        min-width 60%
        max-width 75%
        height 150px
      select
        min-width 60%
        max-width 75%
    .participants
      min-width 60%
      max-width 75%
      display flex
      flex-direction row
      flex-wrap wrap
      font-family "Open Sans"
      font-weight 300
      font-size 17px
      a
        align-self center
        margin-left 4px
        margin-bottom 4px
      .participant 
        background-color: #008CBA
        border none
        color white
        padding 15px 32px
        text-align center
        text-decoration none
        display inline-block
        font-size 16px
        margin 4px 2px
        cursor pointer
        border-radius 12px
    .delete_button
      button
        font-family "Montserrat"
        button()
      min-width 60%
      max-width 75%
      display flex
      justify-content center
      align-items center
      .delete
        font-family "Montserrat"
        background-color #FF5252
        line-height 50%
        width 40%
        font-size 24px
    .confirming_modal
      button
        font-family "Montserrat"
        button()
      .background
        position fixed
        z-index 500
        background-color #212121
        opacity 0.5
        height 100vh
        width 100vw
        top 0
        left 0
      .window
        position fixed
        z-index 501
        top 35%
        left 35%
        background-color #f5f5f5
        width 30%
        padding 20px
        border-radius 10px
        label
          font-size 24px
          font-weight 600
          width 100%
          margin-bottom 20px
        .confirm
          display inline-block
          margin 5px 10px
          width 150px
          background-color #FF5252
        .cancel
          display inline-block
          margin 5px 10px
          width 150px
          background-color #212121

      



