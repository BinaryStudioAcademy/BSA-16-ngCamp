    .history-item
        margin-top 2%
        margin-bottom  2%
        border-radius 10px
        border-bottom 4px solid border-color
        color text-input
        //box-shadow 0px 2px 3px 2px  border-grey
        padding 1%
        //border 2px solid main-blue
        text-indent 1%
        word-break break-all
        .his-head
            line-height 40px
            vertical-align middle
            border-bottom 1px solid border-grey
            font-size 20px
            font-family "Montserrat"
            background-color  #d8d8d8
            padding 1%
            div
                border-left 1px solid white


        .his-body
            padding 1%
            font-size 18px
            background white
            line-height 30px
            vertical-align middle
            font-family "Open Sans"
            div
                border-left 1px solid #d8d8d8
    .button
        button()
        display flex
        padding 5px
        justify-content center
        align-items center
        --box-shadow-color #004D40
        background-color #2e8f35
        //transition none
    .btn
        font-family "Montserrat"
        height 50px
        font-size 20px
     .f-btn
        font-family "FontAwesome" 
        height 40px
        font-size 20px
    .delete-btn
        background-color #cb4e4e
    .view-btn
        background-color #F5F5F5
        border: 1px solid text-input
        &::before
            color text-input
    .type-btn
        background-color disable-input
        padding: 5px
        color text-input !important
