.day-today
    //- background-color #1d8dbf
    color: red;
.day-checked
    background-color yellow
.different-month
    color #ADADAD

.calendar-month
    height 100%
    width 100%
    margin 0
    padding 7px
    overflow-y hidden
    .month-header
        display flex
        width 100%
        height 10%
        justify-content space-around
        align-items center
        border 2px solid #ADADAD
        background-color #F5F5F5
        border-radius 10px
        min-width 346px
        i
            color #1D8DBF
            font-size 20px
            &:hover
                color #260595

        .current-month
            .show-current-month
                font-family "Montserrat"
                font-size 1.8em
            .calendar-picker
                font-size 1.8em
                margin-left 20px
            .datepicker
                position absolute
                background-color #F5F5F5
                top 20%
                left 35%
                //width 150px
                //height 175px
                z-index 2
    .month-body
        margin 0
        margin-top 10px
        width 100%
        height 90%
        min-width 346px
        background-color #F5F5F5
        padding 0
        table
            margin 0 auto
            margin-bottom 10px
            width 90%
            min-width 346px
            height 90%
            font-size 18px
            font-family "Montserrat"
            col(width='14.28')
            col(width='14.28')
            col(width='14.28')
            col(width='14.28')
            col(width='14.28')
            col(width='14.28')
            col(width='14.28')
            tr
                width 100%
                cursor pointer
                th
                    padding 2%
                    border-style solid
                    border-width 1px
                    border-color #808080
                    color #212121
                    background-color #ADADAD
                    text-align center
                td
                    padding 1%
                    border 1px solid #808080
                    text-align center
                    vertical-align center

