.post-message-wrapper
    width 40%
    border 1px solid #7986CB
    border-radius 10px
    position absolute
    top 100px
    left 30%
    margin-bottom 50px
    header
        margin-bottom 30px
        h2
          margin-left 1%
          padding 1%
          font-size 1.4em
        img
          margin-left 60%
          width 5%
        hr
          width 80%
          height 1px
          background-color #EF6C00
          margin-left 0
    .input-block
        margin-left 10%
        margin-bottom 50px
        textarea
          width 70%
          font-size 1.6em
          resize none
        .img-block
          width 8%
          position absolute
          left 74.5%
          img
            width 64%
            margin-left 18%
        div
          background-color #ffcc80
          width 71%
          text-align center
    .draft-post
        margin-bottom 20px
        select
            font-size 1.6em
            width 25%
            margin-left 10%
            margin-right 14%
        button
            font-size 1.6em
            width 25%
            background-color #ffcc80
            margin-right 10%
            margin-left 14%
            border-radius 10px