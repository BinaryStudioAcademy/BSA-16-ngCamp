    border-radius 10px
  hr
    width 40%
    background-color rgb(230, 133, 21)
    height 0.1em

.message
  margin-top 2%

.messageInfo
  border-radius 12px
  background-color rgb(230, 133, 21)
  margin-left 15%
  width 70%
