@import "../../../public/libs/css/generalComponentsStyle.styl"
.projectwrapper
	width 100%
	h1
		header-style()
	.main
		main-component()
		min-width 400px
		display flex
		flex-direction column
		justify-content center
		font-size 23px
		text-align justify
		form[name="projectEdit"]
			margin 30px 0 1.5em 0
			label
				font-family "Montserrat"
				font-size 1.3em
				font-weight 400
				float left
				width 80%
				@media only screen  and (max-width : 480px), screen and (max-device-width: 480px)
					width 95%
				margin-right 0.5em
				display flex
				align-items center
				p
					margin 0
					margin-right 15px
				i
					cursor pointer
					transition all 0.2s ease-out
					&:hover
						color #1d8dbf	
			.wrap
				align-items center
				float left
				clear left
				width 100%
				margin-bottom 2em
				justify-content center
				display flex
				flex-wrap wrap
				box-sizing padding box
				
				// ---------------------------------------------------------------------------TITLE INPUT-------------------------------
				.inputNameWrapper
					width 80%
					@media only screen  and (max-width : 480px), screen and (max-device-width: 480px)
						width 100%
					position relative
					.inputWrapper
						width 100%
						cursor text
						background-color active-input
					i
						position absolute
						right 5px
						top 23px
						font-size 1.3em
						cursor pointer
						&:hover
							color #1d8dbf
				.inputWrapper
					background-color disable-input
					border none
					outline none
					text-align center
					border-bottom 4px solid border-color
					border-radius 4px
					font-size 1.3em
					color #34495E
					margin 15px 0 25px
					position relative
					cursor pointer
					padding 0
					width 80%
					@media only screen  and (max-width : 480px), screen and (max-device-width: 480px)
						width 100%
					padding-right 36px
					&.invalid
						border-bottom 4px solid #D24D57
					&:hover
						i
							color #1d8dbf
					i
						position absolute
						right 5px
						top 6px
						&:hover
							color #1d8dbf
					
				// -----------------------------------------------------------------------DESCRIPTION------------------------
				.projDescriptionWrapper
					width 80%
					font-size 0.8em
					position relative
					&:hover
						i
							color #1d8dbf
					@media only screen  and (max-width : 480px), screen and (max-device-width: 480px)
						width 100%
					.description
						width 100%
						text-align left
						margin 15px 0 25px
						color text-input
						background-color disable-input
						border-bottom 4px solid border-color
						padding 2em 1em
						border-radius 12px
						padding-right 40px
						outline none
						word-wrap break-word
						cursor pointer
						p
							margin 0
					i
						font-size 1.7em
						position absolute
						right 14px
						top 24px
						cursor pointer
						color text-input
						&:hover
							color #1d8dbf
					.descEditor
						cursor text
						background-color active-input
						box-sizing border-box
						
								
				//  --------------------------------------------------------------------DATA-INPUT-----------
				.deadlineInput
					width 30%
					@media only screen  and (max-width : 1000px), screen and (max-device-width: 1000px)
						width 50%
					@media only screen  and (max-width : 480px), screen and (max-device-width: 480px)
						width 80%
					border-bottom 4px solid border-color
					border-radius 4px
					background-color disable-input
					margin 15px 0
					padding 9px 0
					position relative
					cursor pointer
					&:hover
						i
							color #1d8dbf
					& + div
						.uib-datepicker-popup
							.btn-group
								.btn-danger.btn
									display none
					&.active
						background-color active-input
					i
						position absolute
						top 12px
						right 9px
						font-size 1.3em
						cursor pointer
						&:hover
							color #1d8dbf
							
		//  -------------------------------------------------------------------------PARTICIPANTS------------------------------------
		.participants
			width 80%
			display flex
			align-items flex-start
			align-content flex-start
			flex-wrap wrap
			margin 15px 0 25px
			.btn-group.ng-enter,.btn-group.ng-leave
				-webkit-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				-moz-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				-ms-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				-o-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				position: relative;
				display: inline-flex;
			.btn-group.ng-enter,.btn-group.ng-leave.ng-leave-active
				opacity 1
				span
					text-overflow clip
					max-width 0px
				.participant
					border-bottom 0px solid border-color
					transform translateY(8px)
			.btn-group.ng-leave,.btn-group.ng-enter.ng-enter-active
				opacity 1
				span
					text-overflow clip
					max-width 360px
				.participant
					border-bottom 4px solid border-color
					transform translateY(0)
			.participant 
				background-color disable-input
				border none
				border-bottom 4px solid border-color
				border-radius 4px
				color text-input
				max-width 360px
				padding 7px 18px
				padding-right 12px
				text-align center
				text-decoration none
				display inline-flex
				justify-content center
				align-items center
				font-size 0.8em
				margin 10px 7px
				cursor pointer
				-webkit-transition: 0.1s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				-moz-transition: 0.1s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				-ms-transition: 0.1s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				-o-transition: 0.1s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				transition: 0.1s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				span
					display block
					white-space nowrap
					overflow hidden
					text-overflow ellipsis
					-webkit-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
					-moz-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
					-ms-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
					-o-transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
					transition: 0.2s cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
				i
					margin-left 10px
					font-size 1.2em
				&:hover
					border-bottom 8px solid border-color
					transform translateY(-2px)
					margin 8px 7px
					i
						color #e57373
			.add
				padding-right 18px
				padding-left 12px
				height auto
				i
					margin-right 10px
					color #4DB6AC
				&:hover
					i
						color #4DB6AC
					
		// ---------------------------------------------------------------DELETE BUTTON-------------------------------------------
		.delete_button
			button
				button()
			display flex
			justify-content center
			align-items center
			padding 50px 0
			.delete
				font-family "Montserrat"
				font-size 24px
				padding 15px 50px
				--box-shadow-color #ab3c3c
				background-color #cb4e4e

					
				
			

			



