@import "../../../public/libs/css/generalComponentsStyle.styl"
.reports-wrapper
    display block
    width 100%
    .row
        margin 0
    hr
        border-top: 1px solid text-input
    *
        box-sizing border-box
        padding 0px
    .row, [class^="col-"]
        padding 0px
    .reports-holder
        //padding-left  2%
        //padding-right   2%
        padding-bottom 1%
        //border 1px solid border-grey
        //border-radius 10px
        //background-color background-white
        //box-shadow 0px 5px 20px 2px  shadow-grey
    .reports-header
        h2
             border-bottom 4px dashed grey
             font-family "Montserrat"
             line-height: 60px
        padding 1%
    .reports-recent
        width 80%
        margin-left 10%
        table
            color text-input
            background-color: active-input
            td
                padding 1%
                padding-top: 2%
                text-align left
                word-break break-all
                line-height: 40px
                &:first-child
                    padding-left 3%
            .t-head
                border-top-left-radius 4px
                font-family "Montserrat"
                font-size 20px
                background-color disable-input
                border-top-right-radius: 10px
                border-top-left-radius: 10px
                td
                    font-weight: bold
                    //border-right 1px solid white
            .t-body
                font-size 18px
                border-bottom 1px solid border-grey
                &:last-child
                    border-bottom-right-radius: 10px
                    border-bottom-left-radius: 10px
                    border-bottom 4px solid border-color
                td
                    font-family "Open Sans"
                    //border-right 1px solid border-grey
    .reports-samples
        width 80%
        margin-left 10%
        .masonry
            -moz-column-count 2
            -webkit-column-count  2
            -moz-column-gap 1em
            -webkit-column-gap 1em
        .item
            display inline-block
            background-color active-input
            margin  1%
            padding  2%
            padding-left: 5%
            width 100%
            border: 1px solid border-color
            border-radius 10px
            border-bottom 4px solid border-color
            font-family "Montserrat"
            font-size 18px
            .brd-bt
                padding 1%
            .item-title
                font-size 20px
                line-height: 30px
                word-break break-all
            .item-def
                font-weight bold
                font-size 20px
            .item-value
                 font-family "Open Sans"
                 flex-wrap wrap
            .item-row
                margin-bottom 2%
    .generate-holder
        width: 80%
        margin-left: 10%
        color disable-input
        .generate-item-header
            font-size 20px
            font-family "Montserrat"
            padding 1%
            text-align left
            border-radius 5px
            .gen-title
                font-weight: bold
                font-size: 23px
                color: text-input
            input
                border-radius 4px
                border none
                outline none
                border-bottom 4px solid border-color
                background-color disable-input
                color text-input
                font-family "Montserrat"
                text-align center
                font-size 20px
                line-height: 40px
                &:focus
                    background-color active-input
            [type='date']
                font-size 15px
        .generate-item-holder
            padding 1%
            flex-wrap wrap
            display flex
            align-items center
            justify-content space-around
            //border-bottom 4px solid border-color
            //background-color disable-input
            border-radius: 10px
        .hidden-gen
            border-bottom none
            background-color transparent
