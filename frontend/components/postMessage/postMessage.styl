@import "../../../public/libs/css/generalComponentsStyle.styl"
.post-message-wrapper
    width 50%
    border 1px solid #7986CB
    border-radius 10px
    position absolute
    top 100px
    left 30%
    margin-bottom 50px
    background-color background-white
    padding-right 5%
    padding-left 5%
    header
        margin-bottom 30px
        display flex
        padding-right 10px
        h2
            margin-left 1%
            padding 1%
            font-size 1.4em
            font-family "Montserrat"
        div
            button()
            margin-top 3%
            width 30%

        hr
            width 80%
            height 1px
            background-color #EF6C00
            margin-left 0
    .input-block
        margin-left 15%
        margin-bottom 50px
        textarea
            width 70%
            font-size 1.6em
            resize none
            font-family "Open Sans"
        .img-block
            width 8%
            position absolute
            left 74.5%
            img
                width 64%
                margin-left 18%
        div
            background-color #ffcc80
            width 71%
            text-align center
    .draft-post
        select
            font-size 1.6em
            width 25%
            margin-left 10%
            margin-right 14%
    .buttons
        display flex
        flex-direction row
        justify-content center
        flex-wrap wrap
    .sendBtn
        display flex
        justify-content center
        align-content center
        button
            align-self center
            display flex
            justify-content center
            button()
            padding-top 1%
            padding-bottom 1%
            margin-bottom 10px
            margin-top 20px
            padding-right 18px
            padding-left 18px
            font-family "Montserrat"
            font-size 24px
            padding 5px 30px
            --box-shadow-color #004D40
            background-color #2e8f35
