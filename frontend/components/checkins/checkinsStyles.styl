@import "../../../public/libs/css/generalComponentsStyle.styl"
.checkins-wrapper
    main-component()
    min-width 400px
    width 100%
    text-align justify
    h1
        header-style()
    //display flex
    //justify-content center
    div.checkins-container
        //width 100%
        //main-component()
        .header-title
            //display flex
            //align-items center
            //justify-content center
            //flex-wrap wrap
            //color #212121
            //font-size 1.8em
            //font-family "Montserrat"
        .header-button
            margin 5px 0
            button
                button()
                font-family "Montserrat"
                font-size 24px
                padding 15px 40px
                --box-shadow-color #004D40
                background-color #2e8f35
        li
            list-style none

        .checkins-accordion
            max-width 650px
            margin 0 auto
            margin-top 30px

        input[name="week"]
            display none

        section
            font-size 18px
            //border 1px solid #35a720
            overflow hidden
            & > label
                line-height 2em
                height 2em
                font-size 23px
                font-weight bold
                color text-input
                display block
                text-align center

        .tabs
            display none
            &:after
                content ""
                display table
                clear both

        input[id="week-list"]:not(:checked) ~ .tab.all,
        input[id="monday"]:not(:checked) ~ .tab.mo,
        input[id="tuesday"]:not(:checked) ~ .tab.tu,
        input[id="wednesday"]:not(:checked) ~ .tab.we,
        input[id="thursday"]:not(:checked) ~ .tab.th,
        input[id="friday"]:not(:checked) ~ .tab.fr,
        input[id="saturday"]:not(:checked) ~ .tab.sa,
        input[id="sunday"]:not(:checked) ~ .tab.su {
            height: 2em;
        }

        input[id="week-list"]:checked ~ * label[for="week-list"],
        input[id="monday"]:checked ~ * label[for="monday"],
        input[id="tuesday"]:checked ~ * label[for="tuesday"],
        input[id="wednesday"]:checked ~ * label[for="wednesday"],
        input[id="thursday"]:checked ~ * label[for="thursday"],
        input[id="friday"]:checked ~ * label[for="friday"],
        input[id="saturday"]:checked ~ * label[for="saturday"],
        input[id="sunday"]:checked ~ * label[for="sunday"] {
            box-shadow 0 4px border-color;
            transform: translateY(-4px);
            margin-left: 15px;
            margin-right: 15px;
        }

        @media (min-width: 600px) {
            input[id="week-list"]:not(:checked) ~ .tab.all,
            input[id="monday"]:not(:checked) ~ .tab.mo,
            input[id="tuesday"]:not(:checked) ~ .tab.tu,
            input[id="wednesday"]:not(:checked) ~ .tab.we,
            input[id="thursday"]:not(:checked) ~ .tab.th,
            input[id="friday"]:not(:checked) ~ .tab.fr,
            input[id="saturday"]:not(:checked) ~ .tab.sa,
            input[id="sunday"]:not(:checked) ~ .tab.su {
                position: absolute;
                overflow: hidden;
                clip: rect(0 0 0 0);
                height: 1px;
                width: 1px;
                margin: -1px;
                padding: 0;
                border: 0;
            }

            .tabs {
                display: flex;
                justify-content: space-around;
                margin: 0;
                padding: 0;
            }

            .tabs label {
                font-size: 30px;
                transition: all 0.2s ease-out;
                color: text-input;
                margin-left: 5px;
                margin-bottom: 5px;
                background-color: disable-input;
                border-radius: 7px;
                float: left;
                cursor: pointer;
                padding: .2em 0.5em;
            }
        }

        nav.content
            display block
            font-size 22px
            margin-top 25px
            //padding 1%

        ul.header
            display flex
            justify-content space-between
            //font-size 21px
            .teste
                word-break break-all

        ul.main
            //margin-top -50px
            text-align center //or justify

        .question
            margin-right 25px
            word-wrap break-word

        .user-list
            text-align center
            .user-item
                display inline
                width 40px
                height 32px
                img
                    max-width 40px
                    max-height 32px
                    border-radius 5px

        .avatar
            background-color #f2992e
            border-radius 5px
            font-size 20px
            padding 3px
            margin 3px
            text-transform uppercase
            font-weight bold

        .switch
            position relative
            display inline-block
            width 60px
            height 34px
            margin-right 20px
            input
                display none

        .slider
            position absolute
            cursor pointer
            top 0
            left 0
            right 0
            bottom 0
            background-color #ccc
            -webkit-transition .4s
            transition .4s
            &:before
                position absolute
                content ""
                height 26px
                width 26px
                left 4px
                bottom 4px
                background-color white
                -webkit-transition .4s
                transition .4s
            &.round
                border-radius 34px
                &:before
                    border-radius 50%

        input
            &:checked
                & + .slider
                    background-color #1d8dbf    //#4ACA51
                    &:before
                        -webkit-transform translateX(26px)
                        -ms-transform translateX(26px)
                        transform translateX(26px)
            &:focus
                & + .slider
                    box-shadow 0 0 1px #27bcff  //#3E8846
        .tab
            label
                box-shadow none !important
            .content
                background-color disable-input
                border-bottom 4px solid border-color
                border-radius 7px
                padding 1em
                .question
                    margin-bottom 15px
                    a
                        text-decoration none
                

