border-grey #adadad
background-white #F5F5F5
shadow-grey #808080
main-text-color #212121
add-text-color #F2992E
main-blue #1d8dbf
.comments-wrapper
    width 100%
    padding 1%
    
    .row
        padding 0
        margin 0
   .comments-holder
        padding 1%
        border 1px solid #adadad
        border-radius 10px
        background-color #F5F5F5 
        box-shadow 0px 5px 20px 2px  #808080
        .comments-header 
            border-bottom 1px solid grey
            padding 1%
            span
                font-family "Montserrat"
                text-align left
                width 100%
                display inline-block
                font-weight bold
                font-size 30px
        .comments-tools
            width 100%
        .user-name
            font-weight bold
            font-family "Montserrat"
            color #212121
            font-size 25px
            text-align left
        .user-icon
            font-size 50px
        .comment 
            font-family "Open Sans"
            font-weight 400
            font-size 23px
            text-align justify
        .comment-date
            font-family "Open Sans"
            font-size 18px
            font-weight bold
            color #F2992E
        .user-message 
            height 100px
            font-size 18px
        .attachment
            font-size 20px
        .comments-tools
            width 100%
        .button
            box-shadow 0px 0px 10px 0px grey
            display flex
            justify-content center
            align-items center
            margin-top  1%
            margin-bottom 1%
            border-radius 5px
            background-color #1d8dbf
            color white
            padding 1%
            font-size 30px
            height 50px
            transition 0.2s
            cursor pointer
            &:hover
                box-shadow 0px 0px 0px 1px white, 0px 0px 0px 4px #1d8dbf
            &:active
                box-shadow 0px 0px 0px 0.5px white, 0px 0px 0px 2px #1d8dbf, 0px 0px 5px 0px white inset
        .comment-button
            font-family "Montserrat"