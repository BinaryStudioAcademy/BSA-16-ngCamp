@import "../../../public/libs/css/generalComponentsStyle.styl"
.comments-wrapper
    width 100%
    padding 1%
    
    .row
        padding 0
        margin 0
   .comments-holder
        padding 1%
        border 1px solid border-grey
        border-radius 10px
        background-color background-white 
        box-shadow 0px 5px 20px 2px  #808080
        .comments-header 
            border-bottom 1px solid grey
            padding 1%
            span
                font-family "Montserrat"
                text-align left
                width 100%
                display inline-block
                font-weight bold
                font-size 30px
        .comments-tools
            width 100%
        .user-name
            font-weight bold
            font-family "Montserrat"
            color #212121
            font-size 25px
            text-align left
        .user-icon
            font-size 50px
        .comment 
            font-family "Open Sans"
            font-weight 400
            font-size 23px
            text-align justify
        .comment-date
            font-family "Open Sans"
            font-size 18px
            font-weight bold
            color add-text-color
        .user-message 
            height 100px
            font-size 18px
        .attachment
            font-size 20px
        .comments-tools
            width 100%
        .button
            button()
        .comment-button
            font-family "Montserrat"
            --box-shadow-color #004d40
            background-color #2e8f35