@import "../../../public/libs/css/generalComponentsStyle.styl"
.task-wrapper
	.main-container
		min-width 400px
		main-component()
		.wrapper_lable
			display flex
			align-items center
			justify-content center
			flex-wrap wrap
			color #212121
			font-size 1.8em
			font-family "Montserrat"
			h1
				width 100%
				margin-bottom 0
			&:after
				content ''
				height 1px
				margin-top 0.3em
				width 80%
				display block
				background-image -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0)); 
				background-image    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0)); 
				background-image     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0)); 
				background-image      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0));
		.wrapper_createButton
			margin 30px 0
			button
				button()
				font-family "Montserrat"
				line-height 32.406px
		.wrapper_filters
			margin 20px 0
			ul
				list-style-type: none;
				li
					font-family "Montserrat"
					color #1d8dbf
					display flex
					align-items center
					margin 0 7px
					&:first-child
						color #25373D
					input
						margin-left 4px
						font-family "Open Sans"
						width 70px
						border-radius 7px
						border none
						font-size 16px
						border 1px solid gray
						outline none
						padding 3px 6px
						color #25373D
						&:hover
							box-shadow: 0 0 7px #3498db
		.wrapper_noTask
			font-size 1.3em
			font-family "Montserrat"
		.wrapper_task
			margin 20px 0
			border 1px solid #212121
			padding 7px 0
			border-radius 7px
			background-color #212121
			color white
			// overflow hidden
			position relative
			font-family "Montserrat"
			.task_header
				position relative
				z-index 30
				.title
					display flex
					align-items center
					justify-content center

					
				.expander
					display flex
					align-items center
					justify-content center
					i
						font-size 24px
						cursor pointer
				.task_progress
					.countProgress
						display inline-block
					.complete
						color #26A65B
			.task_todos
				background-color white
				color black
				margin-top 10px
				padding-bottom 10px
				.task_itemLable
					font-size 1.3em
					.task_Participant
						font-size 0.8em
						color #1d8dbf
						display inline-block
						margin 0 7px
						&:after
							content ","
						&:last-child:after
							content ";"
				.toDo
					margin-top 10px
				.toDo_description
					font-size 1em
					color gray
				.task_description
					font-size 1em
					color gray
					margin-bottom 10px
					padding-bottom 10px
					border-bottom 2px dashed #6C7A89
				.toDo_status
					display flex
					align-items center
					justify-content center
					font-size 22px
					i
						cursor pointer
						display block
						min-width 18px
						max-width 18px
						height 18px
				.toDo_title
					display flex
					align-items center
					font-size 1.3em
			.animate-expand.ng-enter,.animate-expand.ng-leave
				transition all 0.3s ease-out;
			.animate-expand.ng-enter,.animate-expand.ng-leave.ng-leave-active
				opacity 0
				margin-top 0
			.animate-expand.ng-leave,.animate-expand.ng-enter.ng-enter-active
				opacity 1
				margin-top 10px
		.no_participants
			position relative
			&:after
				content ''
				display block
				position absolute
				right 5px
				width 15px
				height 15px
				border-radius 7.5px
				background-color #EC644B
		.my_task
			position relative
			&:after
				content ''
				display block
				position absolute
				right 5px
				width 15px
				height 15px
				border-radius 7.5px
				background-color #52B3D9
