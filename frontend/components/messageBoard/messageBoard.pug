section.messageBoard-wrapper
  div.header
    h2 Message Board
    hr
    div(ng-link='["PostMessage"]') Post message
  section.message-block(ng-repeat="message in msgBoard.messages track by $index")
      section.user-info
          header
              img.img(src="./img/person.gif")
              h3 {{message.author.firstName}} {{message.author.lastName}}
      article.message-info
          h3 {{message.title}}
          read-more(ng-bind-html="message.description")
          p.post-date {{message.date}}
      section.use-button
          div.fa.fa-files-o(ng-link='["File"]')
          div.fa.fa-comments-o(ng-link='["Comments"]')