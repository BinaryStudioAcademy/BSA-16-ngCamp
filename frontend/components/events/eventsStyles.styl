.wrapper
  width 650px
  margin auto
  background-color gray
  h1
    margin-top 10px
    margin-bottom 10px
  .button
    background-color #4CAF50
    border none
    color white
    padding 15px 32px
    text-align center
    text-decoration none
    display inline-block
    font-size 16px
    margin 4px 2px
    cursor pointer

.header-container
  list-style none
  margin 0
  display flex
  justify-content center
  font-size 25px
  button
    position absolute
    display block
    margin-top 45px
    margin-left 100px
    padding 5px
    border-radius 8px

.choose-event
  display inline-flex
  justify-content center
  align-items center

.choose-event-container
  width 90%
  margin auto

.show-events
  font-size 19px
  margin-right 15px
  margin-bottom 2px

.big-date
  width 100%
  text-align center

.event
  margin-top 10px

.event-header
  width 100%
  display flex
  justify-content space-between
  align-items center

.event-title
  h2
    margin-top 2px
    margin-bottom 2px

.event-icons
  p
    margin-top 2px
    margin-bottom 2px

.event-description
  display -webkit-box
  max-width 650px
  height 60px
  margin 0 auto
  font-size 16px
  line-height 1.2
  -webkit-line-clamp 3
  -webkit-box-orient vertical
  overflow hidden
  text-overflow ellipsis
  p
    margin-top 2px
    margin-bottom 2px