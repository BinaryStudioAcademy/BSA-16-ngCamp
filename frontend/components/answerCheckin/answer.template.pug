div.answer-checkin-wrapper
    label(for='answer-filter') select checkins: 
    select#answer-filter(ng-model='answr.selectedAnswer', ng-options='item for item in answr.options',ng-selected='answr.options[0]',ng-change='answr.filterAnswers()')
    div(ng-repeat="checkin in answr.checkins track by $index") 
        p <b>{{checkin.question}}</b>
        div(ng-repeat="answer in checkin.answers track by $index")
            p {{answer.creationDate | date: "y/MM/dd HH:mm" }} <button ng-if="answer.answer == 'noAnswer'", ng-click="answr.goToAnswer(checkin._id, answer.token)">answer question</button> 