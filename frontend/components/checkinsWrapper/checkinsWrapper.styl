.content
    flex 1
    display flex
    flex-flow column nowrap
    justify-content space-around
    align-content space-around
    width 100%

.resizable-row
    min-height 50px
    flex 1
    display flex
    flex-flow row nowrap
    &.resizable
        flex 0 0 300px

section
    box-sizing border-box
    border-radius 10px
    margin 7px
    background white
    flex 1
    min-width 30px
    &.resizable
        flex 0 0 400px
#two
    min-width 360px
    min-height 80vh
    max-hight 80vh
    .checkins-info-container
        width 100%
        height 100%
        right-panel-component
            margin 2% 2%
            display block
            max-height 80vh
            overflow-y auto
            .checkinsList
                padding-left 0
                font-family 'Montserrat'
                list-style-type: none
                .checkin_title
                    background-color #34495e
                    color white
                    text-align center
                    border-radius 7px
                li
                    margin 1.3em 2em
                    position relative
                        
                .answer
                    .user_name
                        display inline-block
                        -ms-transform: skewX(-15deg); /* IE 9 */
                        -webkit-transform: skewX(-15deg); /* Safari */
                        transform: skewX(-15deg); /* Standard syntax */
                        width 75%
                        font-size 1.2em
                        background-color #59ABE3
                        color white
                        padding 0 15px
                    .creation_date
                        display inline
                        font-size 0.8em
                    .answer_text
                        display block
                        color #34495e
                        margin-left 25px
                        margin-top 10px
                        font-size 1.2em
            &::-webkit-scrollbar
                width 10px
            &::-webkit-scrollbar-track
                background: none;
            &::-webkit-scrollbar-thumb
                background: #d3d3d3;
                border-radius: 7px;

