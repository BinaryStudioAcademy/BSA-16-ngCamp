.trash-container
    h1 Trash
    hr(color="black").trash-line
    .trash-menu-container
        ul.trash-menu
            li filter by:
            li
                a(href="/#/trash") time
            li
                a(href="/#/trash") name
            li
                a(href="/#/trash") author
            li
                a(href="/#/trash") message
            li
                a(href="/#/trash") event
            li
                a(href="/#/trash") task
            li
                a(href="/#/trash") check-ins
            li
                a(href="/#/trash") draft

            li keyword =
                input.trash-input(type="text" id="trash-input")
    .trash-items
        .trash-data
            div.trash-data-title
                span Message
