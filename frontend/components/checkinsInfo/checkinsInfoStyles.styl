.checkins-answer-wrapper
    margin 5%

    .checkins-answer
        display flex
        flex-flow row wrap
        justify-content center
        max-width 650px
        text-align center
        margin 0 auto
        background-color #f5f5f5
        border 1px solid #adadad
        border-radius 10px
        & > *
            flex 1 100%

    .header-answer, .list
        border-bottom 1px solid #adadad

    li
        list-style none

    .header-answer
        height 20%
        h2
            margin 0
        i
            color #212121
            margin-left 5px

    .close-btn
        text-align right
        margin-top 5px
        margin-right 10px

    .control-btn
        display flex
        justify-content space-around
        margin 15px

    .fa-pencil-square-o
        &:hover
            color #ffa502

    .fa-trash-o
        &:hover
            color #f20000

    .fa-times
        &:hover
            color #f20000

    .fa-commenting-o
        &:hover
            color #00c000

    .main-answer
        height 80%

    .qq-list
        li
            font-size 18px
            padding 1%

    .name
        font-weight bold

    .list
        text-align left
        margin-right 15px

