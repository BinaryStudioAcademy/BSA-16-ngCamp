@import "../../../public/libs/css/generalComponentsStyle.styl"
.fileupload_wrapper
	width 100%
	.addFile
		transition padding,height 0.5s ease-out
		outline none
		border none
		color #78909C
		border-bottom 2px dashed #78909C
		overflow hidden
		background none
		display block
		wdith auto
		margin 25px auto
		font-size 1.4em
		padding 0 24px
		outline none
		position relative
		&:hover
			color #0097A7
			border-color #0097A7
		i
			display inline-flex
			font-size 1.2em
			margin-right 0.5em
			position relative
			z-index 1
		span
			display: -moz-inline-stack;
			display inline-flex
			font-family "Montserrat"
			font-size 1em
			margin-left 0.5em
			position relative
			z-index 1
		.button_background
			background-color #1abc9c
			width 100%
			position absolute
			height 100%
			left 0
			top 0
			z-index 0
		&:disabled
			&:hover
				box-shadow none
				cursor wait
	.buttonDownload
		height 30px
		width 80%
		display flex
		justify-content center
		color text-input
		background-color disable-input
		margin 37.5px auto
		// color active-input
		border none
		border-radius 0
			
	.file-Item
		padding 5px 7px
		.file-description
			border-bottom 1px solid #adadad
			i
				margin-left 0.5em
				font-size 1.3em
				color #ff5252
				cursor pointer