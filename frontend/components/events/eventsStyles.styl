@import "../../../public/libs/css/generalComponentsStyle.styl"
.events-wrapper
    width 100%
    h1
        header-style()
    .main
        main-component()
    .row
        padding 0
        margin 0

    .events-holder
        .createbutton
            width 100%
            margin 5px auto
            button
                button()
                font-family "Montserrat"
                font-size 24px
                margin 5px auto
                padding 15px 50px
                --box-shadow-color #004D40
                background-color #2e8f35     
        .choose-event-container
            .form-inline
                width 80%
                margin 25px auto
                .form-group
                    display inline-flex
                    align-items center
                    margin-right 2em
                    .input-group
                        margin 0
                    .pull-left
                        label
                            margin 0
                            margin-right 0.7em
                .search_button
                    display inline-block
                    font-size 1.5em
                    cursor pointer
                    border-radius 4
                    border 1px solid border-color
            
        .events-items
            overflow hidden
            margin 0px auto
            
            .event
                margin 0px
                .event-name
                    h2
                        margin-left 15px
                .fa
                    padding-top 18px
                    padding-left 10px
                .event-body
                    padding-left 15px
                    padding-right 15px
                    p 
                        margin-top 0px
        .avatar
            background-color #f2992e
            border-radius 5px
            font-size 20px
            padding 3px
            margin 3px
            text-transform: uppercase
               
          