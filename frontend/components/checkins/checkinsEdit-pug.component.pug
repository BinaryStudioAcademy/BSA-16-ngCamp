.checkins-setup-wrapper
    .checkins-setup
        .header-setup
            .close-btn
                a(ng-link='["Checkins List"]')
                    i.fa.fa-close
            h3 What question do you want to ask?
            input.question(type='text', ng-model="CheckEd.question" placeholder='Type your question...')

            h3 How frequently should we ask it?
            .newMultiSelect
                .daysSelect
                    isteven-multi-select(input-model='CheckEd.frequency', output-model='outputDays', button-label='icon', item-label='icon name', tick-property='ticked', group-property="msGroup", helper-elements="none")
                .timeSelect
                    isteven-multi-select(input-model='CheckEd.time', output-model='outputTime', button-label='name', item-label='name', tick-property='ticked', selection-mode="single", helper-elements="none")

        .main-setup
            h3 Who do you want to ask?
            ul.user-list
                li.list(ng-repeat="part in CheckEd.participants track by $index")
                    label.checkbox(ng-click="CheckEd.toggleChekin()")
                        input(type='checkbox', ng-checked="CheckEd.parties.indexOf(part._id) > -1",ng-click="CheckEd.toggleChekin(part._id)" )
                        span  {{part.lastName +' '+  part.firstName}}
        .footer-setup
            .container-btn
                .select-btn
                    button(ng-click='CheckEd.toggleAll()') Ask all
                .save-btn
                    button(ng-click="CheckEd.save()" ng-link='["Checkins List"]') Save


