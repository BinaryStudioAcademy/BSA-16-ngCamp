.task-wrapper.row.center-xs
	.main-container.col-xs-8
		.wrapper_lable
			h1 Tasks
		.wrapper_createButton.row.center-xs
			button Create new task
		.wrapper_filters
			ul.row.center-xs
				li filter by :
				li free task
				li subtasks left
				li my tasks
				li keyword =  
					input(type="text")
		.werapper_colordescription
		.wrapper_task.row.center-xs(ng-repeat = "task in tasksctrl.tasks track by $index", ng-if = "tasksctrl.contentFlag" ,   id="{{task._id}}")
			.col-xs-12.task_header.row.middle-xs.center-xs
				.task_progress.col-xs-4
					.content(ng-if = "task.toDos.length") Progress: 
						.span.countProgress(ng-if = "!task.isFinished") {{task.progress}}/{{task.toDos.length}}
						.span.countProgress.complete(ng-if = "task.isFinished") Complete!
				.title.col-xs-5 {{task.title}}
				.expander.col-xs-3(ng-class = "{'no_participants': !task.participants.length,'my_task': !!(task.participants | filter: tasksctrl.currUserId).length}")
					i.fa(aria-hidden = "true", ng-click = "tasksctrl.expand(task)",ng-class="{'fa-arrow-down': !task.expanded, 'fa-arrow-up': task.expanded}")
			.task_todos.col-xs-12.animate-expand(ng-if="task.expanded")
				.row.start-xs
					.task_itemLable.col-xs-offset-1.col-xs-11 Task description:
					.task_description.col-xs-offset-1.col-xs-10 {{task.description}}
					.task_itemLable.col-xs-offset-1.col-xs-10(ng-if = "task.participants.length") Participants: 
						.task_Participant(ng-repeat = "user in task.participants track by $index") {{user.firstName}} {{user.lastName || ""}}
				.toDo.row.start-xs(ng-repeat = "todo in task.toDos track by $index")
					.col-xs-1.toDo_status
						i.fa(aria-hidden = "true",ng-class = "{'fa-square-o': todo.status === 'uncomplete','fa-check-square-o': todo.status === 'complete'}",ng-click="tasksctrl.changeToDoState(todo,task)")
					.toDo_title.col-xs-8 {{todo.title}}
					.toDo_description.col-xs-offset-1.col-xs-10 {{todo.description}}
		.wrapper_noTask.row.center-xs(ng-if = "!tasksctrl.contentFlag")
			.col-xs-12 No tasks in this project
