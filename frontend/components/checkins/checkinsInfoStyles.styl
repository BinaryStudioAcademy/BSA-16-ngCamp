.checkins-answer-wrapper

    .checkins-answer
        display flex
        flex-flow row wrap
        justify-content center
        max-width 650px
        text-align center
        margin 0 auto
        background-color #f5f5f5
        border 1px solid #adadad
        border-radius 10px
        & > *
            flex 1 100%

    .header-answer, .list
        border-bottom 1px solid #adadad

    li
        list-style none

    .header-answer
        height 20%
        h2
            margin 0
        .fa
            margin-left 10px

    .header-btn
        display flex
        justify-content space-between
        margin 15px

    .close-btn
        //text-align right
        margin-top -10px
        margin-right -5px

    .control-btn
        margin 5px

    .user-list
        margin 10px
        padding 10px
        text-align center

    .avatar
        bottom 35px
        margin 3px
        background-color #f2992e
        border-radius 5px
        font-size 23px
        padding .2em 0.2em

    .fa-pencil-square-o
        &:hover
            color #ffa502

    .fa-trash-o
        cursor pointer
        &:hover
            color #f20000

    .fa-times
        &:hover
            color #f20000

    .fa-commenting-o
        &:hover
            color #00c000

    .main-answer
        height 80%

    .qq-list
        li
            font-size 18px
            padding 1%

    .name
        font-weight bold

    .list
        text-align left
        margin-right 15px

