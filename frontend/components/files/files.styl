@import "../../../public/libs/css/generalComponentsStyle.styl"
.files-wrapper
    width 35%
    border 1px solid #7986CB
    border-radius 10px
    position absolute
    top 100px
    left 500px
    background-color background-white
    header
        display flex
        h2
            padding 1%
            font-size 1.8em
            font-family "Montserrat"
        hr
            width 70%
            height 1px
            background-color #EF6C00
            margin-left 0
        button
            button()
            margin-left 70%
            margin-top 3%
            width 10%
    .content
        ul
            width: 100%
            margin-left: 10%
            li
                margin-top 4%
                margin-bottom 4%
                img
                    width 10%
                    margin-left 7%
                    margin-right 5%
                span
                    font-size 1.2em
                hr
                    width 68%
                    margin-left 0
                    height 1px
                    background-color #616161
    button
        button()
        width 40%
        padding-top 1%
        padding-bottom 1%
        margin-left 30%
        margin-bottom 40px
