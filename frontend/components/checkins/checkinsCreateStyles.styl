@import "../../../public/libs/css/generalComponentsStyle.styl"
.checkins-setup-wrapper
    main-component()
    .header
        header-style()
        @media only screen  and (max-width : 430px), screen and (max-device-width: 430px)
            text-align right
        position relative
        .return-btn
            cursor pointer
            display flex
            align-items center
            position absolute
            font-size 20px
            top 0
            left 15%
            i
                font-size 48px
                color #337ab7
            a
                text-decoration none
                margin-left 10px
            @media only screen  and (max-width : 769px), screen and (max-device-width: 769px)
                left 10%
                a
                    display none
            @media only screen  and (max-width : 550px), screen and (max-device-width: 550px)
                left 0
    font-family: "Montserrat"
    .checkins-setup
        display flex
        flex-flow row wrap
        justify-content center
        text-align center
        margin 0 auto
        & > *
            flex 1 100%
        i
            color #212121
        #cke-text
            border-bottom 4px solid border-color
            color text-input
    .header-setup, .main-setup
        //border-bottom 1px solid #adadad
    .checkins-holder
        margin-top: 20px
        width 80%
        margin-left: 10%
        border-bottom 4px solid border-color
        background-color: disable-input
        border-radius: 10px
        padding: 10px
        .question-title
            font-size: 20px
        .question
            font-size: 22px
            font-weight: bold
    .buttons
        width 80%
        margin-left: 10%
        --box-shadow-color #004D40
        .button
            button()
            font-size: 20px
            padding: 5px
        .ok-btn
            background-color #2e8f35
        .back-btn
            background-color: #cb4e4e
    li
        list-style none
    .header-setup
        margin-bottom 15px
    .newMultiSelect
        display flex
        justify-content center
        text-align left
        margin 0
        margin-bottom 25px

    .timeSelect
        text-align center

    .multiSelect > button {
        width: 290px;
        margin: 5px;
    }
    .close-btn
        display flex
        justify-content flex-end
        margin 10px
        i
            font-size 1.8em
            //margin-right 10px
            cursor pointer
            border-radius 4px
            color #424242
            // background-color #ECF0F1
            padding 6px
            transition color 0.2s ease-out
            &:hover
                color #1d8dbf

    input
        outline none
        border none
        border-radius 4px
        background-color disable-input
        border-bottom 4px solid border-color
        width 80%
        font-size 25px
        padding 5px
        display block
        color text-input
        text-align center
        margin 20px auto 50px
        &:focus
            background-color active-input
        &:focus::-webkit-input-placeholder
            color transparent
        &:focus::-moz-placeholder
            color transparent
        &:focus:-ms-input-placeholder
            color transparent
        &:focus:-moz-placeholder
            color transparent
        @media only screen  and (max-width : 769px), screen and (max-device-width: 769px)
            width 90%
        @media only screen  and (max-width : 550px), screen and (max-device-width: 550px)
            width 100%

    .main-setup
        height 60%
        overflow auto
        .user-list
            padding 0
        h3
            margin-bottom 15px
            display inline-block
        .select-btn
            display inline-block
            margin-left 15px
            button
                button()
                font-family "Montserrat"
                font-size 24px
                padding 5px 30px
                --box-shadow-color #e67e22
                background-color #F2992E

    label
        &.checkbox
            display flex
            justify-content flex-start
            align-items center
            font-size 20px
            margin-left 30px
            margin-bottom 0
            cursor pointer
            padding 1%
            input 
                display none
            i
                width 16px
                margin-left 20%
                margin-right 15px
                @media only screen  and (max-width : 1000px), screen and (max-device-width: 1000px)
                    margin-left 10%
                @media only screen  and (max-width : 480px), screen and (max-device-width: 480px)
                    margin-left 0
    .checkbox
        input
            width 20px
            height 20px
            margin-left -30px

    .list
        margin-right 30px
        margin-bottom 0

    .footer-setup
        height 10%

    .container-btn
        display flex
        justify-content space-around



    .save-btn
        button
            button()
            font-family "Montserrat"
            font-size 24px
            padding 15px 35px
            --box-shadow-color #004D40
            background-color #2e8f35


    //.fa-floppy-o
    //    &:hover
    //        color #00c000